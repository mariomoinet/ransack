<%= form_for([@room, @room.reservations.new]) do |f| %>     

<!-- affichage de prix -->
<div class="row">
        <div class="col-md-12 price_tag">
            <span>€ <%= @room.price %></span>
            <span class="pull-right">Par mois</span>
        </div>
    </div>
    
<div class="row">

         <div class="row">
        <div class="col-md-6">
        <% if (user_signed_in?) %>
            <% else %>
        <%="Veuillez-vous connecter pour afficher :" %>
        <%end%>
        </div>
         </div>
         <div class="row">
         <div class="col-md-6">
         <label>Facebook :</label>
         </div>
        <div class="col-md-6">
         <label>Email :</label>
         </div>
         </div>
         
        
         <div class="row">
         <div class="col-md-6">
            <% if (user_signed_in?) %>
                <%= @room.facebook %>
                <% else %>
            <%end%>
         </div>
        <div class="col-md-6">
            <% if (user_signed_in?) %>
                <%= @room.email %>
                <% else %>
            
            <%end%>
         </div>
         </div>


         <div class="row">
         <div class="col-md-6">
            <label>Téléphone :</label>
         </div>
        <div class="col-md-6">
         </div>
         </div>
         
        <div class="row">
         <div class="col-md-6">
            <% if (user_signed_in?) %>
                <%= @room.numero %>
                <% else %>
            <%end%>
         </div>
        <div class="col-md-6">
         </div>
         </div>
 </div>
 
     <%= f.hidden_field :room_id, value: @room.id %> <!-- champs caché pour renseigner l’id du logement et le prix -->
     <%= f.hidden_field :price, value: @room.price %>
 <br>
     <%= f.submit "Demande de réservation ", class: "btn btn-primary wide" %>

 <% end %>
 
